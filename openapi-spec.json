{
  "openapi": "3.0.3",
  "info": {
    "title": "Resellers Hub Gh Pro API",
    "description": "Comprehensive API for data bundle and result checker platform with multi-role user management",
    "version": "1.0.0",
    "contact": {
      "email": "support@your-domain.com"
    },
    "license": {
      "name": "Proprietary"
    }
  },
  "servers": [
    {
      "url": "https://your-domain.com/api",
      "description": "Production server"
    },
    {
      "url": "http://localhost:3000/api",
      "description": "Development server"
    }
  ],
  "security": [
    {
      "bearerAuth": []
    },
    {
      "apiKeyAuth": []
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      },
      "apiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "X-API-Key"
      }
    },
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "name": {
            "type": "string"
          },
          "phone": {
            "type": "string"
          },
          "role": {
            "type": "string",
            "enum": ["admin", "agent", "dealer", "super_dealer", "master", "user", "guest"]
          },
          "walletBalance": {
            "type": "string"
          },
          "isActive": {
            "type": "boolean"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "Agent": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "userId": {
            "type": "string",
            "format": "uuid"
          },
          "storefrontSlug": {
            "type": "string"
          },
          "businessName": {
            "type": "string"
          },
          "businessDescription": {
            "type": "string"
          },
          "balance": {
            "type": "string"
          },
          "totalSales": {
            "type": "string"
          },
          "totalProfit": {
            "type": "string"
          },
          "isApproved": {
            "type": "boolean"
          },
          "paymentPending": {
            "type": "boolean"
          },
          "whatsappSupportLink": {
            "type": "string"
          },
          "whatsappChannelLink": {
            "type": "string"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "DataBundle": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "name": {
            "type": "string"
          },
          "network": {
            "type": "string",
            "enum": ["mtn", "telecel", "at_bigtime", "at_ishare"]
          },
          "dataAmount": {
            "type": "string"
          },
          "validity": {
            "type": "string"
          },
          "basePrice": {
            "type": "string"
          },
          "agentPrice": {
            "type": "string"
          },
          "dealerPrice": {
            "type": "string"
          },
          "superDealerPrice": {
            "type": "string"
          },
          "masterPrice": {
            "type": "string"
          },
          "adminPrice": {
            "type": "string"
          },
          "apiCode": {
            "type": "string"
          },
          "isActive": {
            "type": "boolean"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "Transaction": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "reference": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": ["data_bundle", "result_checker", "agent_activation", "wallet_topup", "admin_revenue"]
          },
          "productId": {
            "type": "string",
            "format": "uuid"
          },
          "productName": {
            "type": "string"
          },
          "network": {
            "type": "string"
          },
          "amount": {
            "type": "string"
          },
          "profit": {
            "type": "string"
          },
          "customerPhone": {
            "type": "string"
          },
          "customerEmail": {
            "type": "string",
            "format": "email"
          },
          "phoneNumbers": {
            "type": "string"
          },
          "isBulkOrder": {
            "type": "boolean"
          },
          "status": {
            "type": "string",
            "enum": ["pending", "confirmed", "completed", "delivered", "cancelled", "failed", "refunded"]
          },
          "deliveryStatus": {
            "type": "string",
            "enum": ["pending", "processing", "delivered", "failed"]
          },
          "paymentMethod": {
            "type": "string"
          },
          "paymentReference": {
            "type": "string"
          },
          "agentId": {
            "type": "string",
            "format": "uuid"
          },
          "agentProfit": {
            "type": "string"
          },
          "deliveredPin": {
            "type": "string"
          },
          "deliveredSerial": {
            "type": "string"
          },
          "failureReason": {
            "type": "string"
          },
          "apiResponse": {
            "type": "string"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          },
          "completedAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string"
          },
          "details": {
            "type": "string"
          }
        }
      },
      "RegisterRequest": {
        "type": "object",
        "required": ["name", "email", "password"],
        "properties": {
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "password": {
            "type": "string",
            "minLength": 6
          },
          "phone": {
            "type": "string"
          }
        }
      },
      "LoginRequest": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "email": {
            "type": "string",
            "format": "email"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "AgentRegisterRequest": {
        "type": "object",
        "required": ["name", "email", "password", "phone", "storefrontSlug", "businessName"],
        "properties": {
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "password": {
            "type": "string",
            "minLength": 6
          },
          "phone": {
            "type": "string"
          },
          "storefrontSlug": {
            "type": "string"
          },
          "businessName": {
            "type": "string"
          },
          "businessDescription": {
            "type": "string"
          }
        }
      },
      "CheckoutRequest": {
        "type": "object",
        "required": ["productId", "productType", "customerPhone", "customerEmail", "amount"],
        "properties": {
          "productId": {
            "type": "string",
            "format": "uuid"
          },
          "productType": {
            "type": "string",
            "enum": ["data_bundle", "result_checker"]
          },
          "customerPhone": {
            "type": "string"
          },
          "customerEmail": {
            "type": "string",
            "format": "email"
          },
          "amount": {
            "type": "string"
          },
          "agentSlug": {
            "type": "string"
          }
        }
      },
      "WithdrawalRequest": {
        "type": "object",
        "required": ["amount", "paymentMethod", "accountNumber", "accountName"],
        "properties": {
          "amount": {
            "type": "number",
            "minimum": 1
          },
          "paymentMethod": {
            "type": "string",
            "enum": ["mtn_momo", "telecel_cash", "airtel_money", "vodafone_cash", "bank_transfer"]
          },
          "accountNumber": {
            "type": "string"
          },
          "accountName": {
            "type": "string"
          }
        }
      },
      "ApiKey": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "name": {
            "type": "string"
          },
          "key": {
            "type": "string"
          },
          "permissions": {
            "type": "string"
          },
          "isActive": {
            "type": "boolean"
          },
          "lastUsed": {
            "type": "string",
            "format": "date-time"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      }
    }
  },
  "paths": {
    "/auth/register": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Register a new user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User registered successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "user": {
                      "$ref": "#/components/schemas/User"
                    },
                    "access_token": {
                      "type": "string"
                    },
                    "refresh_token": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Authenticate user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "user": {
                      "$ref": "#/components/schemas/User"
                    },
                    "agent": {
                      "$ref": "#/components/schemas/Agent"
                    },
                    "access_token": {
                      "type": "string"
                    },
                    "refresh_token": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Invalid credentials",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/auth/me": {
      "get": {
        "tags": ["Authentication"],
        "summary": "Get current user information",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "User information retrieved",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "user": {
                      "$ref": "#/components/schemas/User"
                    },
                    "agent": {
                      "$ref": "#/components/schemas/Agent"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/agent/register": {
      "post": {
        "tags": ["Agent Management"],
        "summary": "Register as an agent",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AgentRegisterRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Agent registration initiated",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    },
                    "paymentUrl": {
                      "type": "string"
                    },
                    "paymentReference": {
                      "type": "string"
                    },
                    "amount": {
                      "type": "number"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/products/data-bundles": {
      "get": {
        "tags": ["Products"],
        "summary": "Get available data bundles",
        "parameters": [
          {
            "name": "network",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": ["mtn", "telecel", "at_bigtime", "at_ishare"]
            }
          },
          {
            "name": "agent",
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Data bundles retrieved",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/DataBundle"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/checkout/initialize": {
      "post": {
        "tags": ["Checkout"],
        "summary": "Initialize a purchase transaction",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CheckoutRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Transaction initialized",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "transaction": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string",
                          "format": "uuid"
                        },
                        "reference": {
                          "type": "string"
                        },
                        "amount": {
                          "type": "string"
                        },
                        "productName": {
                          "type": "string"
                        }
                      }
                    },
                    "paymentUrl": {
                      "type": "string"
                    },
                    "accessCode": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/agent/stats": {
      "get": {
        "tags": ["Agent Dashboard"],
        "summary": "Get agent statistics",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Agent statistics retrieved",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "balance": {
                      "type": "number"
                    },
                    "totalProfit": {
                      "type": "number"
                    },
                    "totalSales": {
                      "type": "number"
                    },
                    "totalTransactions": {
                      "type": "number"
                    },
                    "todayProfit": {
                      "type": "number"
                    },
                    "todayTransactions": {
                      "type": "number"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/agent/withdrawals": {
      "post": {
        "tags": ["Agent Dashboard"],
        "summary": "Request profit withdrawal",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/WithdrawalRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Withdrawal request submitted",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "format": "uuid"
                    },
                    "amount": {
                      "type": "string"
                    },
                    "status": {
                      "type": "string"
                    },
                    "paymentMethod": {
                      "type": "string"
                    },
                    "accountNumber": {
                      "type": "string"
                    },
                    "accountName": {
                      "type": "string"
                    },
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/admin/external-providers": {
      "get": {
        "tags": ["Admin"],
        "summary": "Get external API providers",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "External providers retrieved",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string",
                        "format": "uuid"
                      },
                      "name": {
                        "type": "string"
                      },
                      "provider": {
                        "type": "string"
                      },
                      "endpoint": {
                        "type": "string"
                      },
                      "isActive": {
                        "type": "boolean"
                      },
                      "isDefault": {
                        "type": "boolean"
                      },
                      "createdAt": {
                        "type": "string",
                        "format": "date-time"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Admin"],
        "summary": "Create external API provider",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["name", "provider", "apiKey", "apiSecret", "endpoint"],
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "provider": {
                    "type": "string"
                  },
                  "apiKey": {
                    "type": "string"
                  },
                  "apiSecret": {
                    "type": "string"
                  },
                  "endpoint": {
                    "type": "string"
                  },
                  "isActive": {
                    "type": "boolean"
                  },
                  "isDefault": {
                    "type": "boolean"
                  },
                  "networkMappings": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Provider created successfully"
          }
        }
      }
    },
    "/user/api-keys": {
      "post": {
        "tags": ["API Key Management"],
        "summary": "Create a new API key",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["name"],
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "Name for the API key"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "API key created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiKey"
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": ["API Key Management"],
        "summary": "Get user's API keys",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "API keys retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ApiKey"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/user/api-keys/{id}": {
      "delete": {
        "tags": ["API Key Management"],
        "summary": "Delete an API key",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "API key deleted successfully"
          }
        }
      }
    },
    "/user/api-keys/{id}/permissions": {
      "put": {
        "tags": ["API Key Management"],
        "summary": "Update API key permissions",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "permissions": {
                    "type": "object",
                    "properties": {
                      "read": {
                        "type": "boolean"
                      },
                      "purchase": {
                        "type": "boolean"
                      },
                      "webhook": {
                        "type": "boolean"
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Permissions updated successfully"
          }
        }
      }
    },
    "/user/api-keys/{id}/toggle": {
      "put": {
        "tags": ["API Key Management"],
        "summary": "Toggle API key active status",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "API key status toggled successfully"
          }
        }
      }
    },
    "/v1/bundles": {
      "get": {
        "tags": ["Third-Party API"],
        "summary": "Get available data bundles",
        "security": [
          {
            "apiKeyAuth": []
          }
        ],
        "parameters": [
          {
            "name": "network",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": ["mtn", "telecel", "at_bigtime", "at_ishare"]
            }
          },
          {
            "name": "agent",
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Data bundles retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "bundles": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "string"
                          },
                          "name": {
